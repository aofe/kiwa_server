<%= form_tag path, :method => :get, :class => 'record_search' do %>
  <%= text_field_tag(:query, params[:query], :placeholder => 'Search', :type => :search) %>
  <% if params[:query] %>
    <% no_query_params = params.dup; no_query_params.delete(:query) %>
    <%= link_to('Clear', url_for(no_query_params), :class => 'clear_search') %>
  <% end %>
<% end %>