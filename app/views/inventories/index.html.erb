<% content_for :page_title, "Inventories" %>
<% content_for :page_menu, inventories_menu %>
<% content_for :pagination, paginate(@inventories) %>

<%= record_list @inventories do |inventory| %>
	<%= content_tag :span, inventory.display_name, :class => :name %>
	<%= content_tag :span, pluralize(inventory.length, 'entry'), :class => :metadata %>
	<%= content_tag :span, inventory.description, :class => :description %>
<% end %>