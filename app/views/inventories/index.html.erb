<% content_for :page_title, "Inventories" %>
<% content_for :page_menu, inventories_menu %>
<% content_for :pagination, paginate(@inventories) %>

<%= RecordHelper::RecordList.new(self, @inventories).content do |inventory| %>
  <%= content_tag :span, inventory.display_name, :class => :name %>
  <%= content_tag :span, pluralize(inventory.size, 'entry'), :class => :metadata %>
<% end.caption do |inventory| %>
  <%= add_to_project_button(inventory) %>  
<% end %>