<% content_for :nav do %>
  <%= link_to 'Back', voyages_path %>
<% end %>

<h1>Voyage</h1>
<%= list_attributes(@voyage, :ship_name, :ship_other_name, :place_departed, :place_returned, :ship_tonnage, :ship_length, :ship_beam, :ship_type, :ship_cargo, :start_date, :end_date) %>

<h2>Crew</h2>
<%= record_list @voyage.people.sort_by(&:display_name) %>

<% content_for :sidebar do %>
  <h2>Related</h2>
  <%= record_relation('Encounter', @voyage, @voyage.related_encounters) %>
<% end %>