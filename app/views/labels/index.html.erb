<% content_for :page_title, "Labels" %>
<% content_for :search, record_search(Label) %>
<% content_for :pagination, paginate(@labels) %>

<%= table_for @labels.includes(:primary_media_item) do |t| %>
  <% t.column :title => '' do |label| %>
    <% media_thumbnail(label.primary_media_item, :size => 50, :link_to => label) %>
  <% end %>
  <% t.column :title => 'ID Tag' do |label| %>
    <% link_to label.id_tag, label %>
  <% end %>
  <% t.column :inscription %>
<% end %>