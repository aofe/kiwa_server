<% content_for :page_title, "Labels" %>
<% content_for :page_menu, labels_menu %>
<% content_for :pagination, paginate(@labels) %>

<% if preferences[:view] == 'list' %>
  <%= record_list(@labels).caption do |label| %>
    <%= collect_button(label) %>
  <% end %>
<% else %>
  <%= record_slide_table(@labels).caption do |label| %>
    <%= label.display_name %>
    <%= collect_button(label) %>  
  <% end %>
<% end %>