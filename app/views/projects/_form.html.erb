<%= simple_form_for project, :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description, :input_html => {:rows => 4, :class => 'span6'} %>
  <%= f.input :public %>
  <div class="form-actions">
    <%= submit_button 'Save', 'btn-primary' %>
    <%= link_to 'Cancel', :back, :class => 'btn' %>
  </div>
<% end %>