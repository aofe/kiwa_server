<% content_for :page_title, "Encounters" %>
<% content_for :search, record_search(Encounter) %>
<% content_for :pagination, paginate(@encounters) %>

<%= table_for @encounters.includes(:media_items, :primary_media_item) do |t| %>
  <% t.column :title => '' do |encounter| %>
    <% link_to_if encounter.primary_media_item, media_thumbnail(encounter.primary_media_item, :size => 50, :link_to => encounter), encounter %>
  <% end %>
  <% t.column :title => 'Accession Number' do |encounter| %>
    <% link_to encounter.accession_number, encounter %>
  <% end %>
  <% t.columns :name %>
  <% t.column :title => 'Photos' do |label| %>
    <% label.media_items.length %>
  <% end %>  
<% end %>